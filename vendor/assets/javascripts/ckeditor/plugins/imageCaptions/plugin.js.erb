(function(){

	CKEDITOR.plugins.add('imageCaptions', {

		init: function(editor) {

			editor.addCommand( 'insertImageCaption', new CKEDITOR.dialogCommand( 'imgCaptionDialog' ) );

			editor.ui.addButton( 'imageCaptions', {
				label : "Add Image Caption",
				command: 'insertImageCaption',
				icon: this.path + 'icons/caption.png'
			});

			CKEDITOR.dialog.add( 'imgCaptionDialog', this.path + 'dialogs/captions.js' );

		}
	});

})();
